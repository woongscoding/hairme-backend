[run]
source = .
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    */site-packages/*
    setup.py
    conftest.py
    */migrations/*
    */scripts/generate_*
    */scripts/train_*
    */scripts/evaluate_*
    */scripts/migrate_*
    */scripts/convert_*
    */scripts/merge_*
    */scripts/monitor_*
    */scripts/collect_*
    */scripts/validate_*
    */scripts/compare_*
    */scripts/detailed_*
    */scripts/quick_*

[report]
precision = 2
skip_empty = True
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

[html]
directory = htmlcov
