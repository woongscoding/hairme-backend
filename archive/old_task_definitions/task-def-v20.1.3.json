{
  "family": "hairme-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::364042451408:role/ecsTaskExecutionRole-Hairme",
  "containerDefinitions": [
    {
      "name": "hairstyle-api",
      "image": "364042451408.dkr.ecr.ap-northeast-2.amazonaws.com/hairstyle-api:v20.1.3",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "mysql+asyncmy://admin@hairme-data.cr28a6uqo2k8.ap-northeast-2.rds.amazonaws.com:3306/hairme"
        }
      ],
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:364042451408:secret:rds!db-bb3b2958-f88f-47fd-bf32-80971ac09d1a-MJ38pu:password::"
        },
        {
          "name": "GEMINI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:364042451408:secret:hairme-gemini-api-key-JxLU5L"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/hairstyle-api",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}